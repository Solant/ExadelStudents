<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.2.xsd">

    <http access-denied-page="/access_deny">
        <intercept-url pattern="/curator/**" access="ROLE_CURATOR" />
        <intercept-url pattern="/student/**" access="ROLE_STUDENT" />
        <form-login login-page="/login"/>
        <logout logout-success-url="/" />
    </http>

    <authentication-manager>
        <authentication-provider>
            <user-service>
                <user name="wasya" password="123456" authorities="ROLE_STUDENT" />
                <user name="curator" authorities="ROLE_CURATOR" />
            </user-service>
        </authentication-provider>
    </authentication-manager>

</beans:beans>